@model ASCE.Models.PersonalAccount

@{
    ViewBag.Title = "Details";
    @Styles.Render("~/Content/lists.css");
}

<h2>Информация о лицевом счете номер @Html.DisplayFor(model => model.AccountNumber)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateOpen)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOpen)
        </dd>

        <dd>
            <h4>Список счетчиков</h4>
            @Html.ActionLink("Добавить счетчик", "Create", "Counters")
            <table>
                <tr>
                    <th>
                        Номер
                    </th>
                </tr>
                @foreach (var item in Model.Counters)
                {
                <tr>
                    <td>
                        @item.SerialNumber
                    </td>
                </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Назад", "Index")
</p>
